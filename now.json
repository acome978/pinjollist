{
  "name": "pinjollist",
  "alias": "pinjollist.now.sh",
  "version": 2,
  "regions": ["sin1"],
  "env": {
    "API_URL": "@api-url",
    "FIREBASE_DATABASE_URL": "@firebase-database-url",
    "FIREBASE_PROJECT_ID": "@firebase-project-id",
    "FIREBASE_PRIVATE_KEY_ID": "@firebase-private-key-id",
    "FIREBASE_PRIVATE_KEY_BASE64": "@firebase-private-key-base64",
    "FIREBASE_CLIENT_EMAIL": "@firebase-client-email",
    "FIREBASE_CLIENT_ID": "@firebase-client-id",
    "FIREBASE_AUTH_URI": "@firebase-auth-uri",
    "FIREBASE_TOKEN_URI": "@firebase-token-uri",
    "FIREBASE_FIREBASE_AUTH_PROVIDER_X509_CERT_URL": "@firebase-auth-provider-x509-cert-url",
    "FIREBASE_FIREBASE_CLIENT_X509_CERT_URL": "@firebase-client-x509-cert-url"
  },
  "build": {
    "env": {
      "GOOGLE_ANALYTICS": "@google-analytics"
    }
  },
  "routes": [
    {
      "src": "/api/companies",
      "dest": "/api/routes/companies.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/api/ping",
      "dest": "/api/routes/ping.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "^/static/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "dest": "/www/static/$1"
    },
    {
      "src": "^/static/images/favicon.ico",
      "dest": "/www/static/images/favicon.ico"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/www/static/images/favicon.ico"
    },
    {
      "src": "^/(.*)",
      "dest": "/www/$1",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff"
      }
    }
  ],
  "builds": [
    {
      "src": "api/routes/**/*.ts",
      "use": "@now/node@canary",
      "config": { "maxLambdaSize": "20mb" }
    },
    { "src": "www/package.json", "use": "@now/static-build", "config": { "distDir": "out" } }
  ]
}
